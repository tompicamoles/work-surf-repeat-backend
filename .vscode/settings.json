{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.removeUnused": "explicit"
  },
  "editor.formatOnSave": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,

  "prettier.eslintIntegration": true,
  "prettier.enable": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#5770c7",
    "activityBar.background": "#5770c7",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#78283a",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#5770c7",
    "statusBar.background": "#3b55b0",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#5770c7",
    "statusBarItem.remoteBackground": "#3b55b0",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#3b55b0",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#3b55b099",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#3b55b0"
}
